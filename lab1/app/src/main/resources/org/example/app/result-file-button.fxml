<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<HBox alignment="CENTER_LEFT" prefHeight="5.0" prefWidth="642.0" spacing="5" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.app.controllers.ResultFileController">
    <Label styleClass="long-info-label" text="Итоговый текст:" HBox.hgrow="NEVER" />
    <Region styleClass="horizontal-spacer" HBox.hgrow="NEVER" />
    <Button fx:id="fileButton" onAction="#handleFileChoice" styleClass="file-button" text="Выбор файла" HBox.hgrow="NEVER" />
   <Region styleClass="horizontal-spacer" HBox.hgrow="NEVER" />
   <Label fx:id="filePath" prefHeight="18.0" prefWidth="434.0" text="Label" HBox.hgrow="ALWAYS" />
</HBox>
