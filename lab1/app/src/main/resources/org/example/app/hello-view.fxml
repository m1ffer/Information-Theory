<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<!-- Внешний контейнер HBox с отступами слева и справа -->

<HBox prefHeight="630.0" prefWidth="1000.0" styleClass="root" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- тут не применяется-->
      <Region maxWidth="20" minWidth="20" prefWidth="20" styleClass="horizontal-spacer" HBox.hgrow="NEVER" />

        <!-- Основной VBox со всем содержимым (все вертикальные отступы внутри него) -->
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="629.0" prefWidth="642.0" HBox.hgrow="ALWAYS">

            <children>
            <Region styleClass="vertical-spacer" VBox.vgrow="NEVER" />
                <!-- Вертикальный отступ в начале (по желанию, но если он есть, то добавим класс) -->
                <!-- В текущей версии его нет, но если понадобится, можно вставить здесь -->

                <!-- Верхняя строка: метка и комбобокс -->
                <HBox alignment="CENTER_LEFT" prefHeight="20.0" prefWidth="642.0" VBox.vgrow="NEVER">
                    <children>
                        <Label styleClass="info-label" text="Шифр:" HBox.hgrow="NEVER" />
                        <ComboBox prefHeight="26.0" prefWidth="222.0" />
                    </children>
                </HBox>
            <Region styleClass="vertical-spacer" VBox.vgrow="NEVER" />

                <!-- Первая строка ввода: метка + текстовое поле -->
                <HBox alignment="CENTER_LEFT" prefHeight="26.0" prefWidth="642.0">
                    <children>
                        <Label styleClass="info-label" text="Ключ:" HBox.hgrow="NEVER" />
                        <TextField prefHeight="26.0" prefWidth="222.0" HBox.hgrow="NEVER" />
                  <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

                <!-- Вертикальный отступ (фиксированная высота) -->
                <Region styleClass="vertical-spacer" VBox.vgrow="NEVER" />

                <!-- Вторая строка: метка + две кнопки + горизонтальный отступ между ними + растягивающийся регион -->
                <HBox alignment="BOTTOM_LEFT" prefHeight="15.0" prefWidth="642.0">
                    <children>
                        <Label maxHeight="41.0" prefHeight="41.0" styleClass="long-info-label" text="Исходный текст:" HBox.hgrow="NEVER" />
                  <Region styleClass="horizontal-spacer" HBox.hgrow="NEVER" />
                        <Button styleClass="file-button" text="Выбор файла" HBox.hgrow="NEVER" />
                        <!-- Горизонтальный отступ фиксированной ширины между кнопками -->
                        <Region styleClass="horizontal-spacer" />
                        <Button styleClass="file-button" text="Выбор папки" HBox.hgrow="NEVER" />
                        <!-- Растягивающийся регион справа -->
                        <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
            <Region styleClass="minimal-size-vertical-spacer" VBox.vgrow="NEVER" />

                <!-- Текстовое поле (растягивается) -->
                <TextArea wrapText="true" prefHeight="100.0" prefWidth="642.0" VBox.vgrow="ALWAYS" />

                <!-- Вертикальный отступ -->
                <Region styleClass="vertical-spacer" VBox.vgrow="NEVER" />

                <!-- Третья строка: метка + кнопка + растягивающийся регион -->
                <HBox alignment="BOTTOM_LEFT" prefHeight="5.0" prefWidth="642.0">
                    <children>
                        <Label styleClass="long-info-label" text="Итоговый текст:" HBox.hgrow="NEVER" />
                  <Region styleClass="horizontal-spacer" HBox.hgrow="NEVER" />
                        <Button styleClass="file-button" text="Выбор файла" HBox.hgrow="NEVER" />
                        <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
            <Region styleClass="minimal-size-vertical-spacer" VBox.vgrow="NEVER" />

                <!-- Прокручиваемая панель с текстом внутри AnchorPane -->
                <ScrollPane fitToWidth="true" prefHeight="140.0" prefWidth="642.0" styleClass="text-scroll-pane" VBox.vgrow="ALWAYS">
               <content>
                  <VBox spacing="5" style="-fx-padding: 5;">
                     <children>
                        <Label wrapText="true" />
                     </children>
                  </VBox>
               </content>
                </ScrollPane>

                <!-- Вертикальный отступ -->
                <Region styleClass="vertical-spacer" VBox.vgrow="NEVER" />

                <!-- Нижняя панель с тремя управляющими кнопками и горизонтальными спейсерами -->
                <HBox alignment="CENTER_LEFT" prefHeight="36.0" prefWidth="642.0" VBox.vgrow="NEVER">
                    <children>
                        <!-- Растягивающиеся горизонтальные регионы (для распределения пространства) -->
                        <Region minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                        <Button styleClass="control-button" text="Зашифровать" HBox.hgrow="NEVER" />
                        <Region minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                        <Button styleClass="control-button" text="Расшифровать" HBox.hgrow="NEVER" />
                        <Region minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                        <Button styleClass="control-button" text="Очистить все" HBox.hgrow="NEVER" />
                        <Region minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

                <!-- Вертикальный отступ в конце (одинаковый) -->
                <Region styleClass="vertical-spacer" VBox.vgrow="NEVER" />
            </children>
        </VBox>
        <!--тут тоже не применяется-->
      <Region maxWidth="20" minWidth="20" prefWidth="20" styleClass="horizontal-spacer" HBox.hgrow="NEVER" />
    </children>
</HBox>
